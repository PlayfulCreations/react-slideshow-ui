{
  "name": "react-slideshow-ui",
  "version": "1.0.3",
  "author": "Masashi Hirano (https://github.com/shisama)",
  "license": "MIT",
  "description": "React UI Component for slideshow like SlideShare or SpeakerDeck.",
  "main": "lib/SlideShow.js",
  "homepage": "https://github.com/shisama/react-slideshow-ui",
  "bugs": {
    "url": "https://github.com/shisama/react-slideshow-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shisama/react-slideshow-ui.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "slideshow",
    "slide",
    "slides",
    "slideshare",
    "speakerdeck",
    "presentation",
    "keynote",
    "powerpoint"
  ],
  "scripts": {
    "build": "npm run clean && babel --no-comments src --out-dir lib --ignore src/demo",
    "build:demo": "NODE_ENV=development webpack",
    "build:dll": "NODE_ENV=production webpack --config webpack.dll.config.js",
    "build:all": "npm run lint && npm run typecheck && npm test && npm run build:dll && npm run build:demo && npm run clean && npm run build",
    "clean": "rimraf lib",
    "test": "nyc ava",
    "lint": "eslint src --ext js,jsx --fix",
    "typecheck": "flow",
    "remove-types": "flow-remove-types --out-dir out/ src/ && eslint out --ext js,jsx --fix",
    "prepublish": "npm test && npm build"
  },
  "dependencies": {
    "apiai-promisified": "^1.0.1",
    "react": "^16.0.0",
    "recompose": "^0.26.0",
    "toggle-fullscreen": "^0.3.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "browser-env": "^3.2.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.0",
    "eslint-closure": "^0.0.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-flowtype": "^2.45.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.56.0",
    "flow-remove-types": "^1.2.1",
    "nyc": "^11.5.0",
    "power-assert": "^1.4.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "prop-types": "^15.5.10",
    "react-dom": "^16.0.0",
    "react-hot-loader": "1.3.1",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.1",
    "sinon": "^4.3.0",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.6"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions"
                ]
              },
              "useBuiltIns": true
            }
          ],
          "react"
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-assign"
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "IE 11"
                ]
              },
              "useBuiltIns": true
            }
          ],
          "react"
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-assign"
        ]
      }
    }
  },
  "ava": {
    "files": "**/*.test.js",
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "react"
      ],
      "plugins": [
        "transform-class-properties"
      ]
    }
  },
  "pre-commit": [
    "build:all"
  ]
}
